{
  "name": "@distributeaid/flexport-shipment-monitor",
  "version": "0.0.0-development",
  "description": "Monitor shipments on Flexport",
  "bin": "cli/index.js",
  "author": "Distribute Aid | https://distributeaid.org/",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/distributeaid/flexport-shipment-monitor.git"
  },
  "keywords": [
    "Distribute Aid",
    "flexport",
    "logistics",
    "monitor"
  ],
  "bugs": {
    "url": "https://github.com/distributeaid/flexport-shipment-monitor/issues"
  },
  "homepage": "https://github.com/distributeaid/flexport-shipment-monitor#readme",
  "engines": {
    "node": ">=v14.8.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "postinstall": "check-node-version --package",
    "test:e2e": "node dist/feature-runner/run-features.js ./features --print-results --progress",
    "test": "npm run test:e2e"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ],
    "*.{md,json,yaml,yml,js}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@aws-cdk/aws-apigateway": "1.61.1",
    "@aws-cdk/aws-apigatewayv2": "1.61.1",
    "@aws-cdk/aws-appsync": "1.61.1",
    "@aws-cdk/aws-dynamodb": "1.61.1",
    "@aws-cdk/aws-events-targets": "1.61.1",
    "@aws-cdk/aws-iam": "1.61.1",
    "@aws-cdk/core": "1.61.1",
    "@bifravst/cloudformation-helpers": "3.1.26",
    "@bifravst/code-style": "8.0.55",
    "@bifravst/e2e-bdd-test-runner": "2.6.0",
    "@bifravst/package-layered-lambdas": "3.10.23",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-angular": "9.1.2",
    "@distributeaid/flexport-api-sandbox": "1.5.4",
    "@types/aws-lambda": "8.10.61",
    "@types/node-fetch": "2.5.7",
    "aws-cdk": "1.61.1",
    "aws-sdk": "2.744.0",
    "check-node-version": "4.0.3",
    "commander": "6.1.0",
    "husky": "4.2.5",
    "prettier": "2.1.1",
    "typescript": "4.0.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb-v2-node": "0.1.0-preview.2",
    "@distributeaid/flexport-sdk": "2.6.6",
    "chalk": "4.1.0",
    "date-fns": "2.16.1",
    "node-fetch": "2.6.0"
  },
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.ts$",
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
